            <Font name="AdobeFanHeitiStd-Bold" size="64.0" />
         </font>
      </Text>
      <VBox layoutX="449.0" layoutY="318.0" spacing="20.0">
         <children>
            <Button fx:id="signUpButton" mnemonicParsing="false" onMouseClicked="#goToSignUp" prefHeight="60.0" prefWidth="300.0" text="Sign Up">
